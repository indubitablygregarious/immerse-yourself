{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Immerse Yourself",
  "version": "0.3.14",
  "identifier": "com.peterlesko.immerseyourself",
  "build": {
    "frontendDist": "./ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Immerse Yourself",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": ["icons/icon.png"],
    "resources": {
      "../../env_conf/*.yaml": "env_conf/",
      "../../sound_conf/*.yaml": "sound_conf/"
    }
  }
}
